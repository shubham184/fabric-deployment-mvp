{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "environment.schema.json",
  "title": "Environment Override Schema",
  "type": "object",
  "required": ["workspace_id", "capacity_settings"],
  "properties": {
    "workspace_id": {
      "type": "string",
      "minLength": 1
    },
    "capacity_settings": {
      "type": "object",
      "required": ["compute_scale", "auto_scale"],
      "properties": {
        "compute_scale": {
          "type": "string",
          "enum": ["small", "medium", "large"]
        },
        "auto_scale": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "environment_tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "debug_mode": {
      "type": "boolean"
    }
  },
  "additionalProperties": false
}