{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "customer-config.schema.json",
  "title": "Customer Configuration Schema",
  "type": "object",
  "required": ["customer", "architecture", "capacity"],
  "properties": {
    "customer": {
      "type": "object",
      "required": ["name", "prefix"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "prefix": {
          "type": "string",
          "pattern": "^[a-z]{2,6}$"
        }
      },
      "additionalProperties": false
    },
    "architecture": {
      "type": "object",
      "required": ["medallion"],
      "properties": {
        "medallion": {
          "type": "object",
          "required": ["bronze_layer", "silver_layer", "gold_layer"],
          "properties": {
            "bronze_layer": {
              "type": "boolean"
            },
            "silver_layer": {
              "type": "boolean"
            },
            "gold_layer": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "capacity": {
      "type": "object",
      "required": ["fabric_capacity_id"],
      "properties": {
        "fabric_capacity_id": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": false
    },
    "advanced": {
      "type": "object",
      "properties": {
        "custom_tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}